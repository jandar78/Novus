			else {
                if (!player.Player.IsNPC) {
                    player.OutBuffer = String.Format("You can't cleave {0}, {1} not unconcious.", enemy.Player.FirstName, enemy.Player.Gender == "Male" ? "he's" : "she's");
                }
			}
		}
