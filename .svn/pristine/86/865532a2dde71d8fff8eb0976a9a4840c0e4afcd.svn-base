using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Items {
    public abstract class Item {
        public string ID {
            get;
            private set;
        }

        public string Name {
            get;
            private set;
        }

        public string Description {
            get;
            private set;
        }

        public double Weight {
            get;
            private set;
        }

        public double Condition {
            get;
            private set;
        }

        public double MaxCondition {
            get;
            set;
        }
        
        public Item() {
        }


    }
}
